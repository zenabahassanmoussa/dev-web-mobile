#include <stdio.h>

// Définir la constante PI
#define PI 3.14159265358979323846

// Fonction pour calculer le périmètre d'un cercle
double calculerPerimetre(double rayon) {
    return 2 * PI * rayon;
}

int main() {
    double rayon;

    // Demander à l'utilisateur de saisir le rayon
    printf("Entrez le rayon du cercle : ");
    scanf("%lf", &rayon);

    // Calculer et afficher le périmètre
    double perimetre = calculerPerimetre(rayon);
    printf("Le perimetre du cercle est : %.2f\n", perimetre);

    return 0;
}